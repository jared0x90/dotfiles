"""""""""""""""""""""""""""""""""""""""
" Indenting
"""""""""""""""""""""""""""""""""""""""
" Use spaces instead of tabs
set expandtab
" Tabwidth of 4
set tabstop=4
set shiftwidth=4
set softtabstop=4
" Smart tabs & indents
set autoindent smartindent
set smarttab

"""""""""""""""""""""""""""""""""""""""
" Search
"""""""""""""""""""""""""""""""""""""""
" Search as soon as you start typing
set incsearch                                   
" Do case insensitive matching
set ignorecase 

" Line numbers and color for line number gutter
set number
highlight LineNr ctermfg=grey ctermbg=white

"""""""""""""""""""""""""""""""""""""""
" Misc
"""""""""""""""""""""""""""""""""""""""
set ruler
set showmode
set showmatch

" Save your pinkies, use ; as :
nore ; :
